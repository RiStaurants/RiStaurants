<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.ristaurants.ristaurants.views.BenderThinTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_dialog_height"
        android:background="@android:color/holo_blue_dark"
        android:paddingLeft="@dimen/row_margin"
        android:gravity="center_vertical"
        android:text="@string/login_dialog"
        android:textColor="@android:color/white"
        android:textSize="@dimen/restaurants_name_size" />

    <EditText
        android:id="@+id/et_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="16dp"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/et_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:hint="@string/password_hint"
        android:inputType="textPassword" />

    <com.ristaurants.ristaurants.views.BenderThinTextView
        android:id="@+id/tv_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/row_margin"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:text="@string/forgot_password"
        android:textColor="@android:color/black"
        android:textSize="@dimen/restaurants_subname_size" />

</LinearLayout>