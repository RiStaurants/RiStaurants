<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:paddingTop="@dimen/row_padding"
    android:paddingBottom="@dimen/row_padding">

	<RelativeLayout
		android:layout_height="match_parent"
		android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/row_restaurants_item_bg" >

		<ImageView
			android:id="@+id/iv_restaurant_image"
			android:layout_width="match_parent"
			android:layout_height="@dimen/restaurants_height"
			android:scaleType="centerCrop"
			android:scaleGravity="top"/>

		<LinearLayout
			android:id="@+id/lv_name_plus_rate"
			android:layout_below="@+id/iv_restaurant_image"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			
			<com.ristaurants.ristaurants.views.RobotoThinTextView
				android:id="@+id/tv_restaurant_name"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_weight="1.75"
				android:textSize="@dimen/restaurants_name_size"
				android:textColor="@android:color/black"/>

			<ImageView
				android:id="@+id/iv_restaurant_rate"
				android:layout_height="@dimen/rate_height"
				android:layout_width="@dimen/rate_width"
				android:layout_gravity="center_vertical"
				android:layout_weight="0.25"/>

		</LinearLayout>

		<View
			android:id="@+id/v_divider"
			android:layout_below="@+id/lv_name_plus_rate"
			android:layout_width="match_parent"
			android:layout_height="@dimen/drawer_divider"
			android:background="@android:color/darker_gray"/>

		<com.ristaurants.ristaurants.views.RobotoThinTextView
			android:id="@+id/tv_restaurant_phone_text"
			android:layout_below="@+id/v_divider"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:textSize="@dimen/restaurants_subname_size"
			android:textColor="@android:color/black"
			android:text="phone: "/>

		<com.ristaurants.ristaurants.views.RobotoThinTextView
			android:id="@+id/tv_restaurant_phone"
			android:layout_toRightOf="@+id/tv_restaurant_phone_text"
			android:layout_below="@+id/v_divider"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:textSize="@dimen/restaurants_subname_size"
			android:textColor="@color/background"/>

        <com.ristaurants.ristaurants.views.RobotoThinTextView
            android:id="@+id/tv_restaurant_address"
            android:layout_below="@+id/tv_restaurant_phone"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="@dimen/restaurants_subname_size"
            android:textColor="@android:color/black"/>

	</RelativeLayout>

</RelativeLayout>
