<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:clipToPadding="true"
    android:orientation="vertical"
    android:padding="@dimen/row_margin">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/row_margin"
            android:orientation="horizontal">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/niv_profile_image"
                android:layout_width="@dimen/profile_size"
                android:layout_height="@dimen/profile_size"
                android:background="@drawable/profile_pic" />

            <com.ristaurants.ristaurants.views.BenderSolidTextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/row_margin"
                android:text="@string/not_login"
                android:textColor="@android:color/white"
                android:textSize="@dimen/restaurants_name_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_login_sign_up"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@android:color/holo_blue_light"
            android:orientation="horizontal">

            <com.ristaurants.ristaurants.views.BenderSolidTextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:autoLink="all"
                android:gravity="center_horizontal|center_vertical"
                android:paddingBottom="@dimen/row_padding"
                android:text="@string/login"
                android:textColor="@android:color/white"
                android:textSize="@dimen/restaurants_subname_size" />

            <View
                android:layout_width="@dimen/drawer_divider"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/row_padding"
                android:layout_marginTop="@dimen/row_padding"
                android:background="@android:color/holo_blue_dark" />

            <com.ristaurants.ristaurants.views.BenderSolidTextView
                android:id="@+id/tv_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical"
                android:paddingLeft="@dimen/row_padding"
                android:text="@string/sign_up"
                android:textColor="@android:color/white"
                android:textSize="@dimen/restaurants_subname_size" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>